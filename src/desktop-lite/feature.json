{
    "id": "desktop-lite",
    "name": "Light-weight desktop (Fluxbox)",
    "options": {
        "version": {
            "type": "string",
            "enum": ["latest"],
            "default": "latest",
            "description": "Currently unused."
        },
        "password": {
            "type": "string",
            "proposals": ["vscode","codespaces","password"],
            "default": "vscode",
            "description": "Enter a password for desktop connections"
        },
        "webPort": {
            "type": "string",
            "proposals": ["6080"],
            "default": "6080",
            "description": "Enter a port for the desktop web client"
        },
        "vncPort": {
            "type": "string",
            "proposals": ["5901"],
            "default": "5901",
            "description": "Enter a port for the desktop VNC server"
        }
    },
    "init": true,
    "entrypoint": "/usr/local/share/desktop-init.sh",
    "containerEnv": {
        "DISPLAY": ":1"
    },
    "install": {
        "app": "",
        "file": "install.sh"
    }
}