{
    "id": "php",
    "version": "1.0.3",
    "name": "PHP",
    "options": {
        "version": {
            "type": "string",
            "proposals": [
                "latest",
                "8.0.16"
            ],
            "default": "latest",
            "description": "Select or enter a PHP version"
        },
        "installComposer": {
            "type": "boolean",
            "default": true,
            "description": "Install PHP Composer?"
        }
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "xdebug.php-debug",
                "bmewburn.vscode-intelephense-client",
                "xdebug.php-pack",
                "devsense.phptools-vscode"
            ]
        }
    },
    "containerEnv": {
        "PHP_PATH": "/usr/local/php/current",
        "PATH": "${PHP_PATH}/bin:${PATH}"
    }
}
