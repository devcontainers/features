{
  "id": "nvidia-cuda",
  "name": "NVIDIA CUDA",
  "description": "Installs NVIDIA CUDA libraries.",
  "version": "1.0.0",
  "options": {
    "installCudnn": {
      "type": "boolean",
      "default": false,
      "description": "Install CUDA Deep Neural Network (cuDNN) library"
    },
    "installNvtx": {
      "type": "boolean",
      "default": false,
      "description": "Install NVIDIA Tools Extension (NVTX)"
    },
    "cudaVersion": {
      "type": "string",
      "enum": [
        "11.7"
      ],
      "default": "11.7",
      "description": "Version of CUDA to install"
    },
    "cudnnVersion": {
      "type": "string",
      "enum": [
        "8.5.0.96-1"
      ],
      "default": "8.5.0.96-1",
      "description": "Version of cuDNN to install"
    }
  }
}
