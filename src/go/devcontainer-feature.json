{
    "id": "go",
    "version": "1.0.0",
    "name": "Go",
    "description": "Installs Go and common Go utilities. Auto-detects latest version and installs needed dependencies.",
    "options": {
        "version": {
            "type": "string",
            "proposals": [
                "latest",
                "none",
                "1.19",
                "1.18"
            ],
            "default": "latest",
            "description": "Select or enter a Go version to install"
        }
    },
    "init": true,
    "extensions": [
        "golang.Go"
    ],
    "containerEnv": {
        "GOPATH": "/usr/local/go",
        "PATH": "${GOPATH}/bin:${PATH}"
    },
    "capAdd": [
        "SYS_PTRACE"
    ],
    "securityOpt": [
        "seccomp=unconfined"
    ]
}
